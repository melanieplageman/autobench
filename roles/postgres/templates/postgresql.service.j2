[Unit]
Description=PostgreSQL database server
Documentation=man:postgres(1)

[Service]
Type=notify
ExecStart={{ postgresql_root }}/bin/postgres -D {{ postgresql_root }}/data -c listen_addresses= -c unix_socket_directories={{ postgresql_root }}
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
KillSignal=SIGINT
TimeoutSec=0
